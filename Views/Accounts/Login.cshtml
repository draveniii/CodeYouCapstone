@model WebBankingApp.Models.Account

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<h1>Login</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
